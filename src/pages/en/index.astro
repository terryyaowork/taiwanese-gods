---
import Layout from '~/layouts/PageLayout.astro';
import { siteTitle } from '~/navigation';

const metadata = {
  title: siteTitle['en'],
  ignoreTitleTemplate: true,
};

const sections = [
  {
    title: 'Deities Introduction',
    desc: 'Discover the diverse pantheon of Taiwanese deities and their stories.',
    href: '/en/gods/taoism',
    img: '/assets/images/home-gods.jpg',
  },
  {
    title: 'Temple Pilgrimage',
    desc: 'Explore famous temples and religious centers across Taiwan.',
    href: '/en/temples/north',
    img: '/assets/images/home-temple.jpg',
  },
  {
    title: 'Faith & Culture',
    desc: 'Dive into Taiwanese religious rituals, festivals, and folk customs.',
    href: '/en/culture/rituals',
    img: '/assets/images/home-culture.jpg',
  },
  {
    title: 'About Us',
    desc: 'Our mission, team introduction, and contact information.',
    href: '/en/about',
    img: '/assets/images/home-about.jpg',
  },
];

const introText = 'A multilingual platform showcasing Taiwanese deity worship, temple culture, folk customs, and cultural heritage.';
---

<Layout metadata={metadata}>
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold mb-4">{siteTitle['en']}</h1>
    <p class="mb-8 text-lg text-gray-700">{introText}</p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      {sections.map(section => (
        <a href={section.href} class="block rounded-lg shadow hover:shadow-lg transition bg-white dark:bg-gray-800 overflow-hidden">
          <img src={section.img} alt={section.title} class="w-full h-48 object-cover object-center" />
          <div class="p-6">
            <h2 class="text-2xl font-semibold mb-2">{section.title}</h2>
            <p class="text-gray-600 dark:text-gray-300">{section.desc}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout> 