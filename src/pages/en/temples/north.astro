---
import Layout from '~/layouts/PageLayout.astro';
import temples from '~/data/temples-north.json';
const metadata = {
  title: 'North Taiwan Temples',
};
---
<Layout metadata={metadata}>
  <h1 class="text-3xl font-bold mb-4">North Taiwan Temples</h1>
  <p class="mb-8">Explore representative temples in Northern Taiwan, including main deities, history, and cultural features.</p>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {temples.map(temple => (
      <a href={`/en/temples/${temple.id}`} class="block border rounded-lg p-6 shadow bg-white dark:bg-gray-800 hover:shadow-lg transition">
        {temple.images?.[0] && (
          <img src={temple.images[0]} alt={temple.name.en} class="w-full h-40 object-cover object-top rounded mb-4" />
        )}
        <h2 class="text-xl font-semibold mb-2">{temple.name.en}</h2>
        <div class="mb-1 text-gray-600">{temple.location.en}</div>
        <p class="mb-2 text-gray-700">{temple.description.en}</p>
      </a>
    ))}
  </div>
</Layout> 