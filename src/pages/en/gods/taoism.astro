---
import Layout from '~/layouts/PageLayout.astro';
import gods from '~/data/taoist-gods.json';
const metadata = {
  title: 'Taoist Deities in Taiwan',
};
---
<Layout metadata={metadata}>
  <h1 class="text-3xl font-bold mb-4">Taoist Deities in Taiwan</h1>
  <p class="mb-8">This page introduces common Taoist deities in Taiwan, their characteristics, and related temples.</p>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {gods.map(god => (
      <a href={`/en/gods/taoism/${god.id}`} class="block border rounded-lg p-6 shadow bg-white dark:bg-gray-800 hover:shadow-lg transition">
        {god.image && (
          <img src={god.image} alt={god.name.en} class="w-full h-40 object-cover object-top rounded mb-4" />
        )}
        <h2 class="text-xl font-semibold mb-2">{god.name.en}</h2>
        <p>{god.description.en}</p>
      </a>
    ))}
  </div>
</Layout> 