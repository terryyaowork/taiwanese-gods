---
import Layout from '~/layouts/PageLayout.astro';
import stories from '~/data/god-stories.json';
const metadata = {
  title: 'Deity Stories',
};
---
<Layout metadata={metadata}>
  <h1 class="text-3xl font-bold mb-4">Deity Stories</h1>
  <p class="mb-8">A collection of legendary stories and origins of common deities in Taiwan.</p>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {stories.map(story => (
      <a href={`/en/gods/stories/${story.id}`} class="block border rounded-lg p-6 shadow bg-white dark:bg-gray-800 hover:shadow-lg transition">
        {story.images?.[0] && (
          <img src={story.images[0]} alt={story.title.en} class="w-full h-40 object-cover object-top rounded mb-4" />
        )}
        <h2 class="text-xl font-semibold mb-2">{story.title.en}</h2>
        <div class="mb-1 text-gray-600">Main Deities: {story.mainDeities.map(d => d.name.en).join(', ')}</div>
        <p class="mb-2 text-gray-700">{story.summary.en}</p>
      </a>
    ))}
  </div>
</Layout> 